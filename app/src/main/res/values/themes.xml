<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnorBank" parent="Theme.MaterialComponents.DayNight.NoActionBar" tools:ignore="NewApi">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mainLight</item>
        <item name="android:navigationBarColor">@color/mainDark</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
    </style>
</resources>